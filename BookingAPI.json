		{
			"name": "Create Booking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"var Jsondata = pm.response.json();\r",
							"\r",
							"pm.environment.set(\"b_id\", Jsondata.bookingid);\r",
							"\r",
							"pm.test(\"Verify Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Verify Body matches string\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"QM\");\r",
							"});\r",
							"pm.test(\"Verify Content-Type is present\", function () {\r",
							"    pm.response.to.have.header(\"Content-Type\",\"application/json; charset=utf-8\");\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"Verify frist name\", function () {\r",
							"    pm.expect(jsonData.booking.firstname).to.eql(\"API Testing\");\r",
							"});\r",
							"\r",
							"pm.test(\"Verify checkin dates\", function () {\r",
							"    pm.expect(jsonData.booking.bookingdates.checkin).to.eql(\"2018-01-01\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
